<div class="container-sm mt-4">
  <div class="mx-auto">
    <div class="card">
      <div class="card-body">
        <img class="card-img-top" src="https://images.pexels.com/photos/958545/pexels-photo-958545.jpeg" alt="">
        <h1 class="card-title mt-2"><%= @restaurant.name %></h1>
        <div class="row">
          <p class="card-text">address: <%= @restaurant.address %></p>
          <p class="card-text">Category: <%= @restaurant.category %></p>
        </div>
      </div>
    </div>

    <div class="mx-auto m-3 card p-2">
      <h5 class="text-center">Add new review</h5>
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <div class="form-group">
          <%= f.input :rating, required: false, input_html: { class: 'form-control' } %>
        </div>
        <div class="form-group my-4">
          <%= f.input :content, required: false, input_html: { class: 'form-control' } %>
        </div>
        <%= f.submit "Submit review", class: "btn btn-primary" %>
      <% end %>
    </div>


    <div class="">
      <h4 class="text-center m-3">Reviews</h4>
      <ul class="list-group list-group-flush">
        <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item">
          <p>Rating: <%= review.rating %>/5</p>
          <p>"<%= review.content %>"</p>
        </li>
        <% end %>
      </ul>
    </div>

  </div>
</div>
