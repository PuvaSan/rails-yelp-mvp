<%= simple_form_for @restaurant do |f| %>

  <div class="mx-auto m-3 card p-2">
    <div class="form-group">
      <%= f.input :name, required: false, input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group mt-3">
      <%= f.input :address, required: false, input_html: { class: 'form-control' } %>
    </div>
    <div class="">
      <%= f.input :category,required: false, as: :radio_buttons, collection: [['chinese', 'Chinese'], ['italian', 'Italian'], ['japanese','Japanese'], ['french','French'], ['belgian','Belgian']], label_method: :second, value_method: :first, input_html: { class: 'ms-3 me-1 my-3 ' }  %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  </div>

<% end %>
