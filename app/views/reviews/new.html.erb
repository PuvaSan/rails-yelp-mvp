<div class="container-sm text-center">
  <div class="mx-auto m-3">
    <h1>New Review</h1>

    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :rating %>
      <%= f.input :content %>
      <%= f.submit "Submit review", class: "btn btn-primary" %>
    <% end %>

    <%= link_to "back to #{@restaurant.name}", restaurant_path(@restaurant) %>

  </div>
</div>
